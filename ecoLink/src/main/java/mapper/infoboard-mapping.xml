<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.InfoBoardDAO">
  
<select id="getTotalBoard" resultType="int" >
	select count(*) from board
</select>

<select id="boardListRecent" resultType="boardDto" parameterType="int">
	select * from board order by boardRegtime desc limit
	<foreach collection="array" item="num" separator=",">
		#{num}
	</foreach>
</select>

<select id="boardListView" resultType="boardDto" parameterType="int">
	select * from board order by boardViewCount desc, boardRegtime DESC limit
	<foreach collection="array" item="num" separator=",">
		#{num}
	</foreach>
</select>
 
</mapper>